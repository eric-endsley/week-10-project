@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>

<h1>Machine Directory</h1>

@if(@Model.Count == 0)
{
    <h3>We have no machines! Can we even call this a factory?</h3>
}

@foreach(Machine machine in Model)
{
    <ul>
        <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
    </ul>
}

<p>@Html.ActionLink("Install a new machine", "Create")</p>