@{
    Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>

<h1>Engineer Directory</h1>

@if(@Model.Count == 0)
{
    <h3>Hire some engineers! There's no one to repair the machines!</h3>
}

@foreach(Engineer engineer in Model)
{
    <ul>
        <li>@Html.ActionLink($"{engineer.EngineerFirstName} {engineer.EngineerLastName}", "Details", new { id = engineer.EngineerId })</li>
    </ul>
}

<p>@Html.ActionLink("Hire a new engineer", "Create")</p>